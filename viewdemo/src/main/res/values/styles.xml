<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_header</item>
        <item name="colorPrimaryDark">@color/bg_5</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="rbTextStyle">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/rb_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CollapsedTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExpandedTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
